---
import type { MarkdownHeading } from 'astro'

interface Props {
  headings: MarkdownHeading[]
}

const { headings } = Astro.props
---

<div class="fixed w-72 border-l border-b border-dashed">
  <ul class="text-sm list-none px-2">
    {
      headings
        .filter((h) => !(h.depth > 3))
        .map((heading) => (
          <li class={[, 'ms-0', 'ms-2', 'ms-4'][heading.depth]}>
            <a href={`#${heading.slug}`} class="ds-link ds-link-hover">
              <span>{heading.text}</span>
            </a>
          </li>
        ))
    }
  </ul>
</div>
