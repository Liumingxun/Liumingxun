---
import BaseHead from "./components/BaseHead.astro";
import type Seo from "/interfaces/seo";

interface Props {
	seo: Seo;
}

const { seo } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead seo={seo} />
		<slot name="extend-head" />
	</head>
	<body class="transition-all h-svh">
		<slot />
	</body>
</html>
